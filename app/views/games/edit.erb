<h1>Edit Your Game Entry</h1>

<form action="/games/<% @game.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name</label>
  <input type="text" name="game[name]" id="name" value="<%= @game.name %>"/>

  <label for="description">Description</label>
  <input type="text" name="game[description]" id="description" value="<%= @game.description %>"/>

  <label for="genre">Genre</label>
  <input type="text" name="game[genre]" id="genre" value="<%= @game.genre %>"/>

  <label for="platform">Platform</label>
  <input type="textarea" name="game[platform]" id="platform" value="<%= @game.platform %>"/>

  <label for="average_playtime">Average Playtime</label>
  <input type="textarea" name="game[average_playtime]" id="average_playtime" value="<%= @game.average_playtime %>"/>

  <input type="submit" value="Submit">
</form>

<form action="/games/<%= @game.id %>" method="post">
  <input type="hidden" name="_method" value="delete" />
  <input type="submit" value="Delete" />
</form>
<p><a href="/games">Return to Games</a></p>
